<div class="row">
	<div class="center-block form">
		<h1 class="text-center">Log in</h1>

		<%= form_tag(action:'create') do %>

		<div class="form-group">
			<%= label_tag(:username) %> 
			<%= text_field_tag(:username, nil, class: "form-control", placeholder: "Username") %> 
		</div>

		<div class="form-group">
			<%= label_tag(:password) %> 
			<%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %> 
		</div>

		<%= submit_tag('Log In', class: "btn btn-block btn-primary") %> 
		<% end %>

	</div>
</div>